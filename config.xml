<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Geofrenzy Blink1 LED demo</name>
    <description>
        The first page displays a lightbulb, and the second page offers a list of geodomains. For each geodomain in the list whose fences the device is inside, the lightbulb will flash its color (or white if it has no color)
    </description>
    <author email="developer@geo.network" href="http://developer.geofrenzy.net">
        Geofrenzy
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="net.geofrenzy.cordova.fencingagent" spec="0.1.1" />
    <engine name="android" spec="^6.4.0" />
</widget>
